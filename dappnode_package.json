{
  "name": "subindexer-gnosis.public.dappnode.eth",
  "version": "0.1.0",
  "description": "Circles subscription indexer, API and redeemer",
  "type": "service",
  "author": "bh2smith",
  "categories": ["Developer tools"],
  "requirements": {
    "minimumDappnodeVersion": "0.3.10"
  },
  "exposable": [
    {
      "name": "Subscription API",
      "description": "API endpoint for Redeemable Subscriptions",
      "serviceName": "api",
      "port": 3030
    }
  ],
  "links": {
    "api": "http://api.subindexer-gnosis.public.dappnode.eth:3030/redeemable",
    "homepage": "https://github.com/deluXtreme/"
  },
  "license": "GPL-3.0",
  "setupWizard": {
    "version": "2",
    "fields": [
      {
        "id": "redeemer_pk",
        "target": {
          "type": "environment",
          "name": "REDEEMER_PK",
          "service": "api"
        },
        "title": "Redeemer Private Key",
        "description": "Private key for the redeemer account (keep this secret!)",
        "secret": true,
        "required": true
      },
      {
        "id": "redeem_interval",
        "target": {
          "type": "environment",
          "name": "REDEEM_INTERVAL",
          "service": "api"
        },
        "title": "Redeem Interval",
        "description": "Seconds between redemptions",
        "required": false,
        "default": "86400"
      },
      {
        "id": "gnosis_rpc_url",
        "target": {
          "type": "environment",
          "name": "GNOSIS_RPC_URL",
          "service": "api"
        },
        "title": "Gnosis RPC URL",
        "description": "RPC endpoint for Gnosis Chain",
        "required": false,
        "default": "http://gnosis-erigon.dappnode:8545"
      }
    ]
  }
}
